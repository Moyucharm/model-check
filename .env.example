# ==========================================
# Model Check - Environment Variables
# ==========================================
# Project: https://github.com/Moyucharm/model-check
# Copy this file to .env and adjust as needed.

# ==========================================
# Storage
# ==========================================
# SQLite single-file database (recommended for personal use)
DATABASE_URL="file:./data/model-check.db"

# Optional Redis (leave empty to use in-memory queue)
REDIS_URL=""

# Docker environment variable mapping (optional)
DOCKER_DATABASE_URL="file:/app/data/model-check.db"
DOCKER_REDIS_URL=""

# ==========================================
# Security
# ==========================================
ADMIN_PASSWORD="change-this-password"
JWT_SECRET="change-this-secret-key"

# ==========================================
# Detection & Scheduler
# ==========================================
AUTO_DETECT_ENABLED="false"
AUTO_DETECT_ALL_CHANNELS="true"
CRON_SCHEDULE="0 * * * *"
CRON_TIMEZONE="Asia/Shanghai"
DETECT_PROMPT="1+1=2? yes or no"

CHANNEL_CONCURRENCY="5"
MAX_GLOBAL_CONCURRENCY="30"
DETECTION_MIN_DELAY_MS="3000"
DETECTION_MAX_DELAY_MS="5000"

CLEANUP_SCHEDULE="0 2 * * *"
LOG_RETENTION_DAYS="7"

# ==========================================
# Optional Network Proxy
# ==========================================
GLOBAL_PROXY=""

# ==========================================
# WebDAV (optional)
# ==========================================
WEBDAV_URL=""
WEBDAV_USERNAME=""
WEBDAV_PASSWORD=""
WEBDAV_FILENAME="channels.json"

# ==========================================
# Docker Ports (optional)
# ==========================================
APP_PORT="3000"
REDIS_PORT="6379"
